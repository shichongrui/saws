{
  "include": ["*.ts", "**/*.ts", "*.js", "**/*.js"],
  "exclude": ["./dist", "demo/saws.js", "node_modules", "package.json"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "lib": ["DOM", "ES2022"],
    "target": "ES2022",
    "module": "CommonJS",
    "composite": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "declaration": true,
    "strict": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "allowJs": true,
  }
}
